{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2020",
    "baseUrl": ".",
    "jsx": "react",
    "typeRoots": ["src/types", "node_modules/@types"]
